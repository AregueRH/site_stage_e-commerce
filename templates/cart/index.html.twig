{% extends 'base.html.twig' %}

{% block title %}Mon Panier
{% endblock %}

{% block body %}
	<h1>Mon Panier</h1>

	{% if cart is null or cart.getCartItems is empty %}
		<p>Votre panier est vide.</p>
	{% else %}
		<table>
			<thead>
				<tr>
					<th>Produit</th>
					<th>Quantit√©</th>
					<th>Prix</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				{% for item in cart.getCartItems %}
					<tr>
						<td>{{ item.getProduct().getName() }}</td>
						<td>{{ item.getQuantity() }}</td>
						<td>{{ item.getProduct().getPrice() }}</td>
						<td>{{ item.getQuantity() * item.getProduct().getPrice() }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<p>Total du panier :
			{{ totalPrice }}</p>
	{% endif %}
{% endblock %}

