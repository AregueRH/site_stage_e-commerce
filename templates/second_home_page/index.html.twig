{% block body %}
<style>
    html,
    body {
        height: 100%;
        margin: 0;
    }

    .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
        /* 100% de la hauteur de la vue */
    }

    img {
        max-width: 100%;
        height: 50%;
        margin-bottom: 100px;
        z-index: -1;
    }

    .button-container {
        display: flex;
        justify-content: center;
        gap: 50px; /* Espace entre les boutons */
    }

    button {
        padding: 10px 20px;
        width: 200px;
    }

    .register_button,
    .connection_button {
        background-color: rgb(173, 127, 88);
        color: rgb(195, 205, 207);
        font-size: 25px;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        padding: 10px 20px;
        border-radius: 1cap;
    }
</style>

<div class="container">
    <img src="{{ asset('image/Logo_Carrefour.svg') }}" alt="logo carrefour">
    <div class="button-container">
        <a href="{{ path('app_register') }}">
            <button type="button" class="register_button">S'enregistrer</button>
        </a>
        <a href="{{ path('app_login') }}">
            <button type="button" class="connection_button">Se connecter</button>
        </a>
    </div>
</div>
{% endblock %}
