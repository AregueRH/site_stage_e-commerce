{% extends 'base.html.twig' %}

{% block title %}Liste de Produits
{% endblock %}

{% block body %}

	<style>
		.product-list {
			display: flex;
			flex-wrap: wrap;
			gap: 20px;
			justify-content: center;
			padding: 0;
			list-style-type: none;
			margin: 0 auto;
		}

		h1{
			margin : 0 auto;
						flex: 1 1 200px; /* L'élément prendra au moins 200px et se développera si nécessaire */
			max-width: 300px; /* Limite la largeur maximale */
			border: 2px solid #8B4513;
			border-radius: 10px;
			padding: 20px;
			background-color: #fff;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			display: flex;
			flex-direction: column;
			align-items: center;
			text-align: center;
		}

		.product-item {
			flex: 1 1 200px; /* L'élément prendra au moins 200px et se développera si nécessaire */
			max-width: 300px; /* Limite la largeur maximale */
			border: 2px solid #8B4513;
			border-radius: 10px;
			padding: 20px;
			background-color: #fff;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			display: flex;
			flex-direction: column;
			align-items: center;
			text-align: center;
		}

		.product-item h2 {
			margin: 10px 0;
			
		}

		.product-item p {
			margin: 10px 0;
			font-size: 1.2em;
			color: #555;
		}

		.product-item a {
			margin-top: auto;
			padding: 10px 20px;
			color: #fff;
			background-color: #007bff;
			text-decoration: none;
			border-radius: 5px;
			transition: background-color 0.3s ease;
		}

		.product-item a:hover {
			background-color: #0056b3;
		}
	</style>

<h1>Tout nos Produits</h1>


	<ul class="product-list">
		{% for product in products %}
			<li class="product-item">
				<h2>{{ product.nom }}</h2>
				<p>{{ product.prixTTC }}€</p>
				<a href="{{ path('cart_add_item', { productId: product.id }) }}">Ajouter au panier</a>
			</li>
		{% endfor %}
	</ul>

{% endblock %}

