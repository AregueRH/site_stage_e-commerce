{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<style>
    .login-container {
        max-width: 400px; /* Largeur maximale du conteneur */
        margin: 10% auto; /* Centre horizontalement */
        padding: 20px;
        border: 2px solid #8B4513; /* Couleur des contours bruns (sienne brune) */
        border-radius: 10px; /* Coins arrondis */
        background-color: #fff; /* Fond blanc */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Ombre pour l'effet de profondeur */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .login-container h1 {
        margin-bottom: 20px;
        text-align: center; /* Centre le titre horizontalement */
    }

    .login-container label {
        margin-top: 10px;
        width: 100%; /* Assure que le label prend toute la largeur disponible */
        text-align: center; /* Centre le texte du label horizontalement */
    }

    .login-container .form-control {
        width: 100%; /* Assure que le champ de formulaire prend toute la largeur disponible */
        margin-top: 5px;
    }

    .login-container .btn {
        margin-top: 20px;
        width: 100%; /* Assure que le bouton prend toute la largeur disponible */
        text-align: center; /* Centre le texte du bouton horizontalement */
    }

    .login-container .checkbox {
        margin-top: 10px;
        text-align: center; /* Centre le contenu de la case à cocher horizontalement */
    }

    .login-container .checkbox label {
        display: inline-block; /* Assure que le label de la case à cocher est aligné correctement */
    }

    .register_link {
        margin-top : 10px ;
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%; 
        height: 100%; 
        border-radius:1cap;
    }
  
</style>

<div class="login-container">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
        <label for="inputUsername">Identifiant</label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
        <label for="inputPassword">Mot de Passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se rappeler de moi
            </label>
        </div>
      



        <button class="btn btn-lg btn-primary" type="submit">
            Se Connecter
        </button>
        <a href="{{ path('app_register') }}" >
    <button class="register_link" type="button" > Pas encore de compte ? N'attendez plus </button>
</a>
    </form>
</div>
{% endblock %}